#include <testudo/testudo_lc>
#include "lexer/token.h"
#include "typedefs.h"

define_top_test_node("tokenkind", (tokenkind, "testing tokenkind enum"));

define_test(tokenkind, "identifier")
{
    check(ull(TokenKind::IDENTIFIER))_equal(1);
}

define_test(tokenkind, "multibyte")
{
    check(ull(TokenKind::MINUS_GREATER))_equal(0x2d3e);
    // get enum value from string
    check(ull(get_multi_byte_token_kind("->")))_equal(TokenKind::MINUS_GREATER);
    // check with one char
    check(ull(get_multi_byte_token_kind("(")))_equal(TokenKind::OPEN_PARENS);
}