{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Lilac",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/cmake-build-debug/lilac",
            "args": [
                "data/function.llc",
                "-g",
                "-o",
                "output.out"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "ASAN_OPTIONS",
                    "value": "detect_leaks=0"
                }
            ],
            "externalConsole": false,
            "miDebuggerPath": "/usr/bin/gdb",
            "MIMode": "gdb",
            "preLaunchTask": "build"
        },
        {
            "name": "Compiles",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/cmake-build-debug/lilac",
            "args": [
                "data/compiles.llc",
                "-o",            
                "output.out"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                            {
                    "name": "ASAN_OPTIONS",
                    "value": "detect_leaks=0"
                }
            ],

            "externalConsole": false,
            "miDebuggerPath": "/usr/bin/gdb",
            "MIMode": "gdb",
            "preLaunchTask": "build"
        },

        {
            "name": "Lilac Parse",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/cmake-build-debug/lilac",
            "args": [
                "data/function.llc",
                "-p"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "ASAN_OPTIONS",
                    "value": "detect_leaks=0"
                }
            ],
            "externalConsole": false,
            "miDebuggerPath": "/usr/bin/gdb",
            "MIMode": "gdb",
            "preLaunchTask": "build"
        }
    ]
}